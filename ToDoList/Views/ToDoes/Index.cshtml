@model IEnumerable<ToDoList.Models.ToDo>

@{
    ViewData["Title"] = "To-Do List";
}

<h1>My To-Do List</h1>

<a class="btn btn-primary" role="button" asp-controller="ToDoes" asp-action="Create">Add Task</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @Html.CheckBoxFor(modelItem => item.IsCompleted,
                    new
                    {
                        @class = "task-checkbox",
                        data_id = item.Id
                    })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                <a class="btn btn-secondary" role="button" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-secondary" role="button" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-secondary" role="button" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    document.querySelectorAll('.task-checkbox').forEach(function (checkbox) {
        checkbox.addEventListener('change', function () {
            const taskId = this.getAttribute('data-id'); // Get task ID
            const isCompleted = this.checked; // Get checkbox state (true/false)

            // Send AJAX request to update the status
            fetch(`/ToDoes/UpdateTaskStatus`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': '@Html.AntiForgeryToken()'
                },
                body: JSON.stringify({ id: taskId, isCompleted: isCompleted })
            })
            .then(response => {
                if (response.ok) {
                    console.log('Task updated successfully');
                }
                else {
                    console.error('Task update failed');
                }
            })
            .catch(error => console.error('Error:', error));
        });
    });
</script>